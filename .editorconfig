# Configuration file for EditorConfig (https://editorconfig.org)

root=true

[*]
charset=utf-8
insert_final_newline=true
max_line_length=80
trim_trailing_whitespace=true

[*.md]
indent_size=unset
indent_style=space

[*.sh]
indent_size=2
indent_style=tab

[*.yml]
indent_size=2
indent_style=space

[Containerfile*]
indent_size=4
indent_style=tab

[LICENSE]
indent_size=unset
indent_style=space

[MakeFile]
indent_size=4
indent_style=tab
